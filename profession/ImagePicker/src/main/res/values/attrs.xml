<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CropImageView">
        <attr name="cropMaskColor" format="color"/>
        <attr name="cropBorderColor" format="color"/>
        <attr name="cropBorderWidth" format="dimension"/>
        <attr name="cropFocusWidth" format="dimension"/>
        <attr name="cropFocusHeight" format="dimension"/>
        <attr name="cropStyle" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="circle" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="RulerView">
        <attr name="ruler_bg_fill_color" format="color"/>
        <attr name="ruler_bg_border_color" format="color"/>
        <attr name="ruler_bg_border_Width" format="float"/>
        <attr name="ruler_text_color" format="color"/>
        <attr name="ruler_line_color" format="color"/>
        <attr name="ruler_text_size" format="dimension"/>
        <attr name="ruler_width_per_unit" format="dimension"/>
    </declare-styleable>
</resources>